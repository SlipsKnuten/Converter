<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow when pressed -->
            <item
                android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#1a2530" />
                    <corners android:radius="6dp" />
                    <size
                        android:width="36dp"
                        android:height="28dp" />
                </shape>
            </item>
            
            <!-- Main button pressed -->
            <item
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/accent_orange" />
                    <corners android:radius="6dp" />
                    <size
                        android:width="36dp"
                        android:height="28dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/primary_text" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Deeper shadow for depth -->
            <item
                android:top="3dp"
                android:left="1dp"
                android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#1a2530" />
                    <corners android:radius="6dp" />
                    <size
                        android:width="36dp"
                        android:height="28dp" />
                </shape>
            </item>
            
            <!-- Main button with border -->
            <item
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_dark" />
                    <corners android:radius="6dp" />
                    <size
                        android:width="36dp"
                        android:height="28dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/accent_orange" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>