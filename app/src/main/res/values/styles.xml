<resources>
    <!-- MonkeyType Inspired Styles -->
    <style name="NeonEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/element_margin_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">@dimen/edit_text_min_width</item>
    </style>

    <style name="NeonSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/custom_seekbar_track</item>
        <item name="android:thumb">@drawable/neon_seekbar_thumb</item>
        <item name="android:layout_marginTop">@dimen/seekbar_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/seekbar_margin_bottom</item>
        <item name="android:paddingTop">@dimen/element_margin_small</item>
        <item name="android:paddingBottom">@dimen/element_margin_small</item>
        <item name="android:paddingStart">@dimen/seekbar_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/seekbar_padding_horizontal</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

    <style name="CategoryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/category_button_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/category_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
</resources>